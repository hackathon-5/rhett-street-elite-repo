<body>
<nav class="navbar navbar-inverse navbar-static-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"><img src="/images/icons/png/Infinity-Loop.png" width="25px"/>&nbsp;KeepTruckin'</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <% if(session && session.user) { %>
                <ul class="nav navbar-nav navbar-left">
                    <li><a href="/"><i class="fa fa-comment"></i> Comments</a></li>
                    <% if(session.user.role == 'admin') { %>
                    <li><a href="/clients"><i class="fa fa-user-secret"></i>Clients</a></li>
                    <li><a href="/carriers"><i class="fa fa-truck"></i> Carriers</a></li>
                    <li><a href="/users"><i class="fa fa-users"></i> Users</a></li>
                    <% } %>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/profile"><i class="fa fa-user"></i> Profile</a></li>
                    <li><a href="javascript: logout();"><i class="fa fa-sign-out"></i> Logout</a></li>
                </ul>
            <% } else { %>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/sign-up"><i class="fa fa-user-plus"></i> Sign Up</a></li>
                    <li><a href="/login"><i class="fa fa-sign-in"></i> Login</a></li>
                </ul>
            <% } %>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="container-fluid">
